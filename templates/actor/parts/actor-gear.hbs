<ol class='items-list'>
    <li class='item flexrow items-header'>
        <div class='items-header-equipped'>{{localize 'CANDELAFVTT.itemEquipped'}}</div>
        <div class='items-header-name'>{{localize 'CANDELAFVTT.itemName'}}</div>
        <div class='item-controls'>
            <a class='item-control item-create' title={{localize 'CANDELAFVTT.itemCreate'}} data-type='Gear'><i class='fas fa-plus'></i>{{localize 'CANDELAFVTT.gearAdd'}}</a>
        </div>
    </li>
    {{#each gear as |item id|}}
        <li class='item flexrow' data-item-id='{{item._id}}'>
            <div class='item-equipped grid-span-1'>
                <input type='checkbox' class="item-toggle-equip" {{checked item.system.equipped}} />
            </div>
            <div class='item-name'>
                <div class='item-image'>
                    <a class='rollable' data-roll-type='item'><img src='{{item.img}}' title='{{item.name}}' width='24' height='24' /></a>
                </div>
                <h4>{{item.name}}</h4>
            </div>
            <div class='item-controls'>
                <a class='item-control item-edit' title='{{localize 'CANDELAFVTT.itemEdit'}}'><i class='fas fa-edit'></i></a>
                <a class='item-control item-delete' title='{{localize 'CANDELAFVTT.itemDelete'}}'><i class='fas fa-trash'></i></a>
            </div>
        </li>
    {{/each}}
</ol>